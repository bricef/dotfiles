#! /bin/bash
#
# Checks the shell environment for Brice's commonly used
# CLI tools and creates a report of what still needs to
# be installed
#


TOOLS=(
  "cargo"
  "eza"
  "git"
  "zellij"
  "zsh"
  "curl"
  "bat"
  "delta"
  "helix;hx"
  "stow" 
  "yazi"
  "go"
  "asdf"
  "fzf"
  "jq"
  "dust"
)

OK=()
FAIL=()

for tool in ${TOOLS[@]}; do
  IFS=";" read -a names <<< "$tool"
  FOUND=false
  for name in ${names[@]}; do
    if command -v "$name" >/dev/null 2>&1
    then
      FOUND=true
      OK+=( "$name" )
      break
    fi

  done
  test "$FOUND" = true || FAIL+=( "${names[0]}" )
done


for tool in ${OK[@]}; do
  echo "OK $tool"
done

for tool in ${FAIL[@]}; do
  echo "NOT FOUND $tool"
done
