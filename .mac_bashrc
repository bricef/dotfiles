#!/bin/bash


alias ls="ls -G --color=yes"
alias ll="ls -l"
alias la="ls -A"
alias lla="ls -lA"
alias l="ls"

alias lsa="ls -iablh"
alias psg="ps aux | grep "


# PATH=$PATH:/Users/$(whoami)/bin/apache-maven-3.3.9/bin
# PATH=$PATH:/Users/$(whoami)/Library/Python/2.7/bin/
PATH=$PATH:/Users/$(whoami)/repos/doctools/bin/
PATH=$PATH:/Users/$(whoami)/Library/Python/3.7/bin

# Go installation
export GOPATH=$(go env GOPATH)

# Add GHC 7.8.4 to the PATH, via http://ghcformacosx.github.io/
export GHC_DOT_APP="/Applications/ghc-7.8.4.app"
if [ -d "$GHC_DOT_APP" ]; then
  export PATH="${HOME}/.cabal/bin:${GHC_DOT_APP}/Contents/bin:${PATH}"
fi


export PATH

export CLICOLOR=1
export LSCOLORS=gxBxhxDxfxhxhxhxhxcxcx

# Use `brew install bash-completion` for this to make sense.
[ -f /usr/local/etc/bash_completion ] && . /usr/local/etc/bash_completion
[[ -s `brew --prefix`/etc/autojump.sh ]] && . `brew --prefix`/etc/autojump.sh

# Iterm has some nice shell integration. see https://www.iterm2.com/documentation-shell-integration.html
test -e "${HOME}/.iterm2_shell_integration.bash" && source "${HOME}/.iterm2_shell_integration.bash"

# Weaveworks aliases
alias devkc="kubectl --kubeconfig /Users/brice/go/src/github.com/weaveworks/service-conf/ansible/dev/kubeconfig"
alias prodkc="kubectl --kubeconfig /Users/brice/go/src/github.com/weaveworks/service-conf/ansible/prod/kubeconfig"

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/brice/google-cloud-sdk/path.bash.inc' ]; then source '/Users/brice/google-cloud-sdk/path.bash.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/brice/google-cloud-sdk/completion.bash.inc' ]; then source '/Users/brice/google-cloud-sdk/completion.bash.inc'; fi
